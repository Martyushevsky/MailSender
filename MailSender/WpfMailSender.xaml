<Window x:Class="MailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnSendEmail" Content="Send email" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="128" Click="BtnSendEmail_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="128"/>
        <TextBox x:Name="tbSubject" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Subject" VerticalAlignment="Top" Width="500"/>
        <TextBox x:Name="tbBody" HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="500" Height="200"/>

    </Grid>
</Window>
