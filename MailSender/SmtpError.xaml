<Window x:Class="MailSender.SmtpError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="300" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None" BorderThickness="1" BorderBrush="#FFB4B4B4">
    <Grid>
        <Label x:Name="lSmtpError" Content="Error" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Foreground="#FFB62323"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,16" VerticalAlignment="Bottom" Width="128" Click="BtnOk_Click"/>

    </Grid>
</Window>
